<div class="ui text container">
  <div class="ui segments">
    <div class="ui segment">
      <h1>Novo Usuario</h1>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'ui text large form'}) do |f| %>
        <div class="field">
          <%= f.input :email, required: false, autofocus: true, input_html: {autocomplete: "email", class: 'ui text large form'} %>
        </div>

        <div class="ui vertical stripe segment">
          <div class="ui middle aligned stackable grid container">
            <div class="eight wide column">
              <div class="field">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: {autocomplete: "email"} %>
              </div>
            </div>
          </div>
          <div class="ui middle aligned stackable grid container">
            <div class="eight wide column">
              <div class="field">
                <%= f.input :password,
                            required: false,
                            input_html: {autocomplete: "current-password"} %>
              </div>
              <div class="ui checkbox">
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
            </div>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>
        </div>

      <% end %>



      <div class="ui segment" style="text-align: center">

        <%= render "devise/shared/links" %>
      </div>


    </div>
  </div>
</div>


