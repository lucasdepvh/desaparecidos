<!DOCTYPE html>
<html>
<head>
  <title>Desaparecidos</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/semantic.min.css" >
  <%= stylesheet_link_tag 'application', media: 'all' %>

</head>

<body>
<div class="ui fixed inverted menu">
  <div class="ui container">
    <a href="/apresentacoes" class="header item">
      <img class="logo" src="https://semantic-ui.com/examples/assets/images/logo.png">
      Desaparecidos
    </a>
    <%= link_to "Home", apresentacoes_path, class: "item" %>
    <%= link_to "Cadastrar", new_user_registration_path, class: "item" %>
    <%= link_to "Login", new_user_session_path, class: "item" %>
    <%= link_to "Buscar", desaparecidos_path, class: "item" %>
  </div>
</div>
<div class="ui main container">
  <%= yield %>
</div>
</body>

<script src="//cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/semantic.min.js" crossorigin="anonymous"></script>
<%= javascript_include_tag 'application' %>

</html>
