<p id="notice"><%= notice %></p>

<h1>Streets</h1>

<table class='ui celled table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Zipcode</th>
      <th>Type</th>
      <th>District</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @streets.each do |street| %>
      <tr>
        <td><%= street.name %></td>
        <td><%= street.zipcode %></td>
        <td><%= street.type %></td>
        <td><%= street.district %></td>
        <td><%= link_to 'Visualizar', street %></td>
        <td><%= link_to 'Editar', edit_street_path(street) %></td>
        <td><%= link_to 'Excluir', street, method: :delete, data: { confirm: 'VocÃª tem certeza que deseja excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

